.signup-wrapper
  .signup-header
    .header-logo
      =link_to "#" do
        =image_tag "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"
    %nav.progress-bar.signup-bar
      %ol
        %li 
          %p 会員情報
          .progress-status.start.active.though
        %li 
          %p 電話番号認証
          .progress-status.active.though
        %li 
          %p.active お届け先住所入力
          .progress-status.address.active.though.now
        %li 
          %p 支払い方法
          .progress-status
        %li 
          %p 完了
          .progress-status.end
  .regisration-main
    %main.registration-main-container
      %h2.registration-main-container__header 発送元・お届け先住所入力
      %section.registration-main-container__form
        .registration-main-container__form__content
          .registration-main-container__form__content_group
            %label お名前
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "例）山田"}
            %input.input-default{type: "text", value: "", placeholder: "例）彩"}
          .registration-main-container__form__content__group
            %label お名前カナ
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "例）ヤマダ"}
            %input.input-default{type: "text", value: "", placeholder: "例）アヤ"}
          .registration-main-container__form__content__group
            %label 郵便番号
            %span.form-require 必須
            %input.input-default{type: "number", value: "", placeholder: "例）123-4567"}
          .registration-main-container__form__content__group
            %label 都道府県
            %span.form-require 必須
            .signup-select__content.address
              =fa_icon 'angle-down'
              %select.input-default
                %option 北海道
          .registration-main-container__form__content__group
            %label 市町村
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "例）横浜市緑区"}
          .registration-main-container__form__content__group
            %label 番地
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "例）青山1-1-1"}
          .registration-main-container__form__content__group
            %label 建物名
            %span.form-require.any 任意
            %input.input-default{type: "text", value: "", placeholder: "例）柳ビル103"}
          .registration-main-container__form__content__group
            %label 電話
            %span.form-require.any 任意
            %input.input-default{type: "tel", value: "", placeholder: "例）09012345678"}
            %button.btn-default
              次へ進む