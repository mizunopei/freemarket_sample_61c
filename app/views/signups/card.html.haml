.signup-wrapper
  .signup-header
    .header-logo
      =link_to "#" do
        =image_tag "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"
    %nav.progress-bar.signup-bar
      %ol
        %li 
          %p 会員情報
          .progress-status.start.active.though
        %li 
          %p 電話番号認証
          .progress-status.active.though
        %li 
          %p お届け先住所入力
          .progress-status.active.though
        %li 
          %p.active 支払い方法
          .progress-status.active.though.now
        %li 
          %p 完了
          .progress-status.end
  .regisration-main
    %main.registration-main-container
      .registration-main-container__header 支払い方法
      %section.registration-main-container__form
        .registration-main-container__form__content
          .registration-main-container__form__content_group
            %label カード番号
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "半角数字のみ"}
          .registration-main-container__form__content__group
            %div
              %label 有効期限
              %span.form-require 必須
            .signup-select
              .signup-select__content.card
                =fa_icon 'angle-down'
                %select.select-default
                  %option --
                  %option 1
                  %option 2
                  %option 3
                  %option 4
                  %option 5
                  %option 6
                  %option 7
                  %option 8
                  %option 9
                  %option 10
                  %option 11
                  %option 12
              %span 月
              .signup-select__content.card
                =fa_icon 'angle-down'
                %select.select-default
                  %option --
                  %option 2019
                  %option 2020
                  %option 2021
                  %option 2022
                  %option 2023
                  %option 2024
                  %option 2025
                  %option 2026
                  %option 2027
                  %option 2028
                  %option 2029
              %span 年
          .registration-main-container__form__content__group
            %label セキュリティコード
            %span.form-require 必須
            %input.input-default{type: "text", value: "", placeholder: "カード背面4桁もしくは3桁の番号"}
          
            %button.btn-default
              次へ進む