.login-wrapper
  .login-wrapper__no-account-container
    %p アカウントをお持ちでない方はこちら
    %button.btn-default.new-account
      新規会員登録
  .login-wrapper__sns-login-container
    %button.btn-default.login.facebook
      = fa_icon 'facebook-official', class: "signup-icon"
      Facebookでログイン
    %button.btn-default.login.google
      = fa_icon 'google', class: "signup-icon"
      Googleでログイン
  .login-wrapper__mail-login-container
    %input.input-default.login{type: "email", value: "", placeholder: "メールアドレス"}
    %input.input-default.login{type: "password", value: "", placeholder: "パスワード"}
    %button.btn-default
      ログイン
.signup-footer
  %nav
    %ul
      %li
        =link_to "プライバシーポリシー", "#"
      %li
        =link_to "メルカリ利用規約", "#"
      %li
        =link_to  "特定商取引に関する表記", "#"
  =link_to "#",class: "signup-footer__logo" do
    =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?465897195", width: "100", height: "auto"
