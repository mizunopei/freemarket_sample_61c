                    %option{value: "宮崎県"} 宮崎県
                    %option{value: "鹿児島県"} 鹿児島県
                    %option{value: "沖縄県"} 沖縄県
          
              .form-group
                %label 発送までの日数
                %span.form-require 必須
                %div
                  .select-box
                    .i
                  %select.select-bar
                    %option ---
                    %option{value: ""} 1~2日で発送
                    %option{value: ""} 2~3日で発送
                    %option{value: ""} 4~7日で発送
          
          .sell-content.clearfix
            %h3.sell-sub__head
            販売価格(300~9,999,999)
            %a.question ?
            .sell-form__box
              %ul.sell-price
                %li.form-group
                %label 価格
                %span.form-require 必須
                %input.price{placeholder: "例)300"}
              .tax 販売手数料
              .profit 販売利益

