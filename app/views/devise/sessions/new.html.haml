.signup-wrapper.signup
  .signup-header
    .header-logo
      =link_to root_path do
        =image_tag "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg"
  .login-wrapper
    .login-wrapper__no-account-container
      %p アカウントをお持ちでない方はこちら
      =link_to signups_path, class:"btn-default new-account" do
        新規会員登録
    .login-wrapper__sns-login-container
      = link_to "/users/auth/facebook", method: :post, class:"btn-default login facebook" do
        = fa_icon 'facebook-official', class: "signup-icon"
        Facebookでログイン
      = link_to "/users/auth/google_oauth2", method: :post, class: "btn-default login google" do
        = fa_icon 'google', class: "signup-icon"
        Googleでログイン
    .login-wrapper__mail-login-container
      = flash[:alert]
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.email_field :email, placeholder: "メールアドレス", autocomplete: "email",  class: "input-default"
        = f.password_field :password, placeholder: "パスワード", autocomplete: "current_password",  class: "input-default"
        = f.submit "ログイン", class: "btn-default"
  .signup-footer
    %nav
      %ul
        %li
          =link_to "プライバシーポリシー", "#"
        %li
          =link_to "メルカリ利用規約", "#"
        %li
          =link_to  "特定商取引に関する表記", "#"
    =link_to root_path, class: "signup-footer__logo" do
      =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?465897195", width: "100", height: "auto"
    %p &copy;2019 Mercari
